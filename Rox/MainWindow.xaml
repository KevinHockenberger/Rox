<Window x:Class="Rox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rox"
        xmlns:m="clr-namespace:Rox"
        mc:Ignorable="d"
        Title="Rox" Height="440" Width="480" WindowStyle="None" Loaded="Window_Loaded" 
        Initialized="Window_Initialized" Closing="Window_Closing" Icon="include/ite.ico"
        
        >

    <Window.Resources>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="FontFamily" Value="arial" />
            <Setter Property="FontSize" Value="18"></Setter>
            <Setter Property="Background" Value="#FF292929"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FF292929"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
        <Style TargetType="{x:Type TreeView}">
            <Setter Property="Background" Value="#FF292929"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>



        <Style TargetType="TreeViewItem">
            <!---->
            <Setter Property="Background" Value="#FF292929"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Border>
                            <TextBlock Text="{Binding}"/>
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Style.Resources>
                                        <SolidColorBrush x:Key="hoverBrush" Opacity=".5" 
                                         Color="{DynamicResource {x:Static SystemColors.HotTrackColorKey}}"/>
                                    </Style.Resources>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding RelativeSource={RelativeSource Self},
                                                  Path=IsMouseOver}" Value="True"/>
                                                <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem},
                                                  Path=IsSelected}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" Value="{DynamicResource hoverBrush}"/>
                                            <Setter Property="BorderBrush" Value="#ffa5d7f0"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </DataTemplate>
                </Setter.Value>
            </Setter>            
            
        </Style>
