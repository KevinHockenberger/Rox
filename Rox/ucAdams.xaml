<UserControl x:Class="Rox.ucAdams"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rox"
             mc:Ignorable="d"
             d:DesignWidth="326.042" d:DesignHeight="174.93"
             Background="#FF1D1D1D" Foreground="White" >
  <UserControl.Resources>
    <Style TargetType="Label" >
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="Foreground" Value="white"/>
    </Style>
    <Style TargetType="TextBox" >
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="Foreground" Value="white"/>
    </Style>
  </UserControl.Resources>
    <StackPanel>
      <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition/>
      </Grid.ColumnDefinitions>
        <Label Content="IP Address:"/>
      <TextBox Name="txtIpAddress" ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Text="{Binding IpAddress}" Background="#FF1D1D1D" Foreground="White" VerticalContentAlignment="Center" Grid.Column="1"/>
      </Grid>

    </StackPanel>

</UserControl>
